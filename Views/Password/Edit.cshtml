@model PasswordManager.Models.PasswordEntry

@{
    ViewData["Title"] = "Edit Password";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h1 class="m-4">Edit Password</h1>
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit">
                    <div class="mb-3">
                        <label for="url" class="form-label">URL</label>
                        <input asp-for="URL" class="form-control" id="url">
                        <span asp-validation-for="URL" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="user" class="form-label">User</label>
                        <input asp-for="User" class="form-control" id="user">
                        <span asp-validation-for="User" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" asp-for="Password" class="form-control" id="password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-outline-success">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

